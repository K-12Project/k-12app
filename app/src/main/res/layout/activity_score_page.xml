<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.raffaele.testapp.Score_page"
    android:id="@+id/Score_page">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scores"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="460dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Correct Answers:"
        android:id="@+id/CorrectA"
        android:layout_marginTop="50dp"
        android:background="#ff23ff00"
        android:textSize="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="500dp"
        android:layout_marginRight="400dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wrong Answers:"
        android:id="@+id/WrongA"
        android:background="#ffff0007"
        android:textSize="32dp"
        android:layout_below="@+id/CorrectA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="400dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Answered Questions:"
        android:id="@+id/Answered"
        android:background="#b23653ff"
        android:textSize="32dp"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/WrongA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="450dp"
        android:layout_marginRight="375dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/CorrectC"
        android:textSize="32dp"
        android:layout_below="@+id/CorrectA"
        android:layout_marginLeft="600dp"
        android:layout_marginRight="400dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/WrongC"
        android:textSize="32dp"
        android:layout_below="@+id/WrongA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="600dp"
        android:layout_marginRight="400dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/AnsweredC"
        android:textSize="32dp"
        android:layout_below="@+id/Answered"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="400dp"
        android:layout_marginLeft="600dp" />

</RelativeLayout>
